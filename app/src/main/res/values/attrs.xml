<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TabItemView">
        <attr name="show_type">
            <enum name="red_dot" value="0" />
            <enum name="number" value="1" />
        </attr>
        <attr name="normal_src" format="reference" />
        <attr name="selected_src" format="reference" />
        <attr name="selected" format="boolean" />
        <attr name="text" format="string" />
        <attr name="text_normal_color" format="color" />
        <attr name="text_select_color" format="color" />
    </declare-styleable>

    <declare-styleable name="TagLayout">
        <attr name="tag_isAppendMode" format="boolean" />
        <attr name="tag_inputHint" format="string" />

        <attr name="tag_borderColor" format="color" />
        <attr name="tag_textColor" format="color" />
        <attr name="tag_backgroundColor" format="color" />

        <attr name="tag_dashBorderColor" format="color" />
        <attr name="tag_inputHintColor" format="color" />
        <attr name="tag_inputTextColor" format="color" />

        <attr name="tag_checkedBorderColor" format="color" />
        <attr name="tag_checkedTextColor" format="color" />
        <attr name="tag_checkedMarkerColor" format="color" />
        <attr name="tag_checkedBackgroundColor" format="color" />
        <attr name="tag_pressedBackgroundColor" format="color" />
        <attr name="tag_borderStrokeWidth" format="dimension" />
        <attr name="tag_textSize" format="dimension" />
        <attr name="tag_horizontalSpacing" format="dimension" />
        <attr name="tag_verticalSpacing" format="dimension" />
        <attr name="tag_horizontalPadding" format="dimension" />
        <attr name="tag_verticalPadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="tagGroupStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="labels_view">
        <attr name="selectType" format="enum">
            <enum name="NONE" value="1" />
            <enum name="SINGLE" value="2" />
            <enum name="SINGLE_IRREVOCABLY" value="3" />
            <enum name="MULTI" value="4" />
        </attr>
        <attr name="maxSelect" format="integer" />
        <attr name="labelTextColor" format="reference" />
        <attr name="labelTextSize" format="dimension" />
        <attr name="labelTextPaddingLeft" format="dimension" />
        <attr name="labelTextPaddingTop" format="dimension" />
        <attr name="labelTextPaddingRight" format="dimension" />
        <attr name="labelTextPaddingBottom" format="dimension" />
        <attr name="lineMargin" format="dimension" />
        <attr name="wordMargin" format="dimension" />
        <attr name="labelBackground" format="reference" />
    </declare-styleable>

    <declare-styleable name="ShadowLayout">
        <attr name="containerShadowColor" format="color" />
        <attr name="containerShadowRadius" format="dimension" />
        <attr name="containerDeltaLength" format="dimension" />
        <attr name="containerCornerRadius" format="dimension" />
        <attr name="deltaX" format="dimension" />
        <attr name="deltaY" format="dimension" />
        <attr name="enable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CircleRotateImageView">
        <attr name="civ_rotate_border_width" format="dimension" />
        <attr name="civ_rotate_border_color" format="color" />
        <attr name="civ_rotate_border_overlay" format="boolean" />
        <attr name="civ_rotate_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="GalleryRecyclerView">
        <attr name="helper" format="string">
            <enum name="LinearSnapHelper" value="0" />
            <enum name="PagerSnapHelper" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="WheelView">
        <attr name="wheelTextColor" format="color"/>
        <attr name="wheelTextSize" format="dimension"/>
        <attr name="wheelShowCount" format="integer"/>
        <attr name="wheelTotalOffsetX" format="dimension"/>
        <attr name="wheelItemVerticalSpace" format="dimension"/>
        <attr name="wheelRotationX" format="float"/>
        <attr name="wheelVelocityUnits" format="integer"/>
    </declare-styleable>

    <declare-styleable name="WheelMaskView">
        <attr name="wheelMaskLineColor" format="color"/>
    </declare-styleable>
</resources>