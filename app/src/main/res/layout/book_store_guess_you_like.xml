<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tvTitleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:text="同类书籍"
            android:textColor="#2D2D2D"
            android:textSize="@dimen/txt_size_h4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGuessYouLikeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/item_arrow"
            android:drawableRight="@drawable/item_arrow"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="更多"
            android:textColor="#ffc0c0c0"
            android:textSize="13sp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/guessYouLikeGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:nestedScrollingEnabled="false"
        android:paddingBottom="10dp" />

</LinearLayout>