<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvDayCount"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="#2C2C2C"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/txt_size_h3"
            android:text="0"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="@dimen/txt_size_h2"
            android:textColor="#999999"
            android:text="@string/read_day_count"/>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/public_line_vetical"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvBookCount"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#2C2C2C"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ivBookLine"
            android:layout_below="@+id/ivBookCount"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/txt_size_h3"

            android:text="0"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="@dimen/txt_size_h2"
            android:text="@string/read_book_count"/>


    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/public_line_vetical"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvPageCount"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="#2C2C2C"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPageCount"
            android:layout_toLeftOf="@+id/ivPageLine"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/txt_size_h3"
            android:text="0"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="@dimen/txt_size_h2"
            android:text="@string/read_page_count"/>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/public_line_vetical"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvHourCount"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="#2C2C2C"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivHourCount"
            android:layout_toLeftOf="@+id/ivHourLine"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/txt_size_h3"
            android:text="0"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="@dimen/txt_size_h2"
            android:text="@string/read_hour_count"/>

    </LinearLayout>








</LinearLayout>