<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center"
    android:background="@drawable/chapter_order_bg"
    >

    <TextView
        android:id="@+id/tvOrderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_centerInParent="true"
        android:textColor="@color/text_normal_color"
        android:textSize="@dimen/txt_size_h4"
        android:text="@string/order_this_chapter"/>

    <TextView
        android:id="@+id/tvOrderDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:visibility="visible"
        android:textSize="@dimen/txt_size_h2"
        android:textColor="#F86161"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tvOrderTitle"
        android:text=""/>



</LinearLayout>