<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.task.ShareToFriendActivity">


    <include layout="@layout/public_title_bar" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableLoadMore="false">

        <FrameLayout
            android:id="@+id/dataLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/share_fri_bg"
            android:visibility="gone"
            >


            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="280dp"
                        android:src="@drawable/share_fri_xin" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="230dp"
                        android:src="@drawable/share_fri_q" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="220dp"
                        android:src="@drawable/share_fri_gift" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="34dp"
                        android:src="@drawable/share_fri_w" />


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="100dp"
                        android:paddingLeft="26dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="34dp"
                            android:src="@drawable/share_fri_qr_s" />

                        <ImageView
                            android:layout_width="98dp"
                            android:layout_height="98dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/share_fri_qr_b" />

                        <ImageView
                            android:id="@+id/ivQR"
                            android:layout_width="98dp"
                            android:layout_height="98dp"
                            android:layout_gravity="bottom"
                            android:padding="10dp"
                            android:src="@drawable/share_qr" />

                    </FrameLayout>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/share_fri_bottom" />


                </RelativeLayout>


            </android.support.v4.widget.NestedScrollView>


            <TextView
                android:id="@+id/tvShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/share_fri_bg2"
                android:gravity="center"
                android:paddingTop="16dp"
                android:text="分享好友"
                android:textColor="#FFCD4234"
                android:textSize="18sp" />

        </FrameLayout>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>



</LinearLayout>