<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/read_head"/>


    <include layout="@layout/read_setting"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/guide_read_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_read_5"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_read_6"
            android:text="退出阅读"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_h5"
            android:layout_below="@+id/guide_read_9"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/guide_read4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_read4"
            android:layout_centerInParent="true"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="点文字区域继续阅读"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_h5"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/guide_read4"
            />




    </RelativeLayout>

</FrameLayout>