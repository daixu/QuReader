<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCover1"
                android:layout_width="70dp"
                android:layout_height="93dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/default_cover"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/ivCover2"
                android:layout_width="70dp"
                android:layout_height="93dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/default_cover"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/ivCover3"
                android:layout_width="83dp"
                android:layout_height="111dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/default_cover"
                android:layout_gravity="center_horizontal" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="安利最喜欢的小说" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvKind1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"
                android:padding="5dp"
                android:background="@drawable/border_theme_color_bg"
                android:textSize="12sp"
                android:text="古代言情" />

            <TextView
                android:id="@+id/tvKind2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:background="@drawable/border_theme_color_bg"
                android:textSize="12sp"
                android:text="古代言情" />

            <TextView
                android:id="@+id/tvKind3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:padding="5dp"
                android:background="@drawable/border_theme_color_bg"
                android:textSize="12sp"
                android:text="古代言情" />

            <TextView
                android:id="@+id/tvKind4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:padding="5dp"
                android:background="@drawable/border_theme_color_bg"
                android:textSize="12sp"
                android:text="古代言情" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:maxLines="2"
            android:textColor="#4A4A4A"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="安利最喜欢的小说" />
    </LinearLayout>
</android.support.v7.widget.CardView>